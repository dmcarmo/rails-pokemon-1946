<header class="header">
  <%= link_to "< Trainers", trainers_path %>
</header>

<div class="two-columns">
  <div>
    <p><%= "#{@trainer.name} is going to catch 'em all!" %></p>
    <%= render @trainer %>
  </div>
  <div>
    <p>Their Pok√©mon</p>
    <div class="grid">
      <% @trainer.pokeballs.each do |pokeball| %>
        <div class="pokemon-card">
          <%= cl_image_tag pokeball.pokemon.photo.key %>
          <h2><%= link_to pokeball.pokemon.name.capitalize, pokemon_path(pokeball.pokemon) %></h2>
          <%= pokeball.pokemon.element_type.capitalize %>
          <p>Caught on <%= pokeball.caught_on.strftime("%B %d, %Y") %></p>
          <%= link_to "Release", pokeball_path(pokeball), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
